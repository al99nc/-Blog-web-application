<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Web App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<%- include("partials/header.ejs") %>
        <% if (posts.length > 0) { %>
    <h1>Your posts:</h1>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <h2><%= post.Title %></h2>
                <p><%= post.body_post %></p>
                <small>ID: <%= post.id %></small>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <small>"Post not found"</small>
<% } %>

